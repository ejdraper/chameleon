<?xml version="1.0" encoding="UTF-8"?>
<root>
  <% @data.each do |panel| %>
  <item>
    <% if !panel[:html].nil? %>
    <text><![CDATA[<%=raw panel[:html] %>]]></text>
    <% else %>
    <text><![CDATA[<%= panel[:text] %>]]></text>
    <% end %>
    <type><%=
      case panel[:type]
        when :alert then 1
        when :info then 2
        else 0
      end
    %></type>
  </item>
  <% end %>
</root>
